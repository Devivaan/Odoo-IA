<odoo>
    <data>
        <record id="view_prueba_proyecto_tree" model= "ir.ui.view">
          <field name="name">prueba.proyecto.tree</field>
          <field name="model">prueba.proyecto</field>
          <field name="arch" type="xml">
            <tree>
              <field name="name"/>
              <field name="edad"/>
            </tree>
          </field>
        </record>
        <record id="view_onrentx_project_form" model="ir.ui.view">
          <field name="name">prueba.proyecto.form</field>
          <field name="model">prueba.proyecto</field>
          <field name="arch" type="xml">
            <form>
              <sheet>
                <group>
                  <field name="name"/>
                  <field name="edad"/>
                </group>
              </sheet>
            </form>
          </field>
        </record>
        <record id="action_onrentx_project" model="ir.actions.act_window">
          <field name="name">Prueba</field>
          <field name="res_model">prueba.proyecto</field>
          <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_prueba" name="Proyectos" parent="menu_prueba" action="action_prueba"/>
    </data>
</odoo>
